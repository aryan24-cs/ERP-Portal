<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ERP Portal - User Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      :root {
        --primary-blue: #1e90ff;
        --primary-purple: #7c3aed;
        --primary-teal: #14b8a6;
        --primary-pink: #ec4899;
        --primary-indigo: #4f46e5;
        --accent-orange: #f97316;
        --bg-light: #f0f4f8;
        --card-bg: #ffffff;
        --text-dark: #1f2937;
        --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: var(--bg-light);
        min-height: 100vh;
        overflow-x: hidden;
        color: var(--text-dark);
      }

      .main-content {
        margin-left: 260px;
        margin-top: 3rem;
        padding: 2rem 1.5rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        transition: margin-left 0.3s ease;
      }

      @media (max-width: 768px) {
        .main-content {
          margin-left: 0;
          margin-top: 1.5rem;
          padding: 1rem;
        }
      }

      .welcome-header,
      .dashboard-grid,
      .section-card {
        margin-bottom: 3rem;
      }

      .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      @media (max-width: 768px) {
        .dashboard-grid {
          grid-template-columns: repeat(1, 1fr);
        }
      }

      .dashboard-card {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: var(--shadow);
        position: relative;
        overflow: hidden;
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .dashboard-card::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(30, 144, 255, 0.2) 0%, transparent 70%);
        transition: transform 0.5s ease;
        transform: scale(0);
        z-index: 0;
      }

      .dashboard-card:hover::before {
        transform: scale(1) rotate(45deg);
      }

      .dashboard-card:hover {
        transform: translateY(-10px) scale(1.03);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
      }

      .card-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--primary-blue);
        position: relative;
        z-index: 1;
        transition: transform 0.3s ease;
      }

      .dashboard-card:hover .card-icon {
        transform: scale(1.2) rotate(5deg);
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-dark);
        position: relative;
        z-index: 1;
        margin-bottom: 0.5rem;
      }

      .card-description {
        font-size: 0.9rem;
        color: #6b7280;
        position: relative;
        z-index: 1;
        margin-bottom: 1rem;
      }

      .welcome-header {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: var(--shadow);
        text-align: center;
      }

      .success-flow {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 1rem 2rem;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--shadow);
        animation: successPulse 2s ease infinite;
      }

      @keyframes successPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.02); }
      }

      .error-flow {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        padding: 1rem 2rem;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--shadow);
      }

      .fade-in-flow {
        animation: fadeInFlow 1s ease-out forwards;
        opacity: 0;
      }

      @keyframes fadeInFlow {
        to { opacity: 1; }
      }

      .section-card {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: var(--shadow);
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
      }

      .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
      }

      .section-title i {
        margin-right: 0.75rem;
        color: var(--primary-blue);
      }

      .attendance-progress {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .progress-bar {
        flex: 1;
        height: 10px;
        background: #e5e7eb;
        border-radius: 5px;
        overflow: hidden;
        position: relative;
        min-width: 200px;
      }

      .progress-fill {
        height: 100%;
        background: var(--primary-blue);
        transition: width 0.5s ease;
      }

      .document-item,
      .assignment-item,
      .library-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
      }

      .document-item:last-child,
      .assignment-item:last-child,
      .library-item:last-child {
        border-bottom: none;
      }

      .flowing-button {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-teal));
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .flowing-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body>
    <%- include('../partials/sidebar', { token, currentPage: 'user' }) %>

    <div class="main-content">
      <header class="welcome-header fade-in-flow">
        <h1 class="text-3xl font-bold">Welcome back, <%= user.name %>!</h1>
        <p class="text-gray-600">Your academic hub for success</p>
      </header>

      <% if (success) { %>
      <div class="success-flow fade-in-flow" id="success-message">
        <div class="flex items-center">
          <i class="fas fa-check-circle text-2xl mr-4"></i>
          <span class="font-semibold text-lg"><%= success %></span>
        </div>
        <button
          class="text-white hover:text-gray-200"
          onclick="dismissMessage()"
          aria-label="Close success message"
        >
          <i class="fas fa-times"></i>
        </button>
      </div>
      <% } %>
      <% if (error) { %>
      <div class="error-flow fade-in-flow" id="error-message">
        <div class="flex items-center">
          <i class="fas fa-exclamation-circle text-2xl mr-4"></i>
          <span class="font-semibold text-lg"><%= error %></span>
        </div>
        <button
          class="text-white hover:text-gray-200"
          onclick="dismissMessage()"
          aria-label="Close error message"
        >
          <i class="fas fa-times"></i>
        </button>
      </div>
      <% } %>

      <div class="dashboard-grid">
        <div class="dashboard-card fade-in-flow">
          <i class="fas fa-user-circle card-icon"></i>
          <h3 class="card-title">My Details</h3>
          <p class="card-description">View and update your personal information</p>
          <a href="/users/profile?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
        <div class="dashboard-card fade-in-flow" style="animation-delay: 0.1s">
          <i class="fas fa-bullhorn card-icon"></i>
          <h3 class="card-title">Announcements</h3>
          <p class="card-description">Stay updated with important notices</p>
          <a href="/users/announcements?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
        <div class="dashboard-card fade-in-flow" style="animation-delay: 0.2s">
          <i class="fas fa-wallet card-icon"></i>
          <h3 class="card-title">Fees</h3>
          <p class="card-description">Manage tuition and payment details</p>
          <a href="/users/fees?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
        <div class="dashboard-card fade-in-flow" style="animation-delay: 0.3s">
          <i class="fas fa-chart-line card-icon"></i>
          <h3 class="card-title">Academic Progress</h3>
          <p class="card-description">Track grades and performance</p>
          <a href="/users/academic-progress?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
        <div class="dashboard-card fade-in-flow" style="animation-delay: 0.4s">
          <i class="fas fa-calendar-alt card-icon"></i>
          <h3 class="card-title">Course Schedule</h3>
          <p class="card-description">View your class timetable</p>
          <a href="/users/schedule?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
        <div class="dashboard-card fade-in-flow" style="animation-delay: 0.5s">
          <i class="fas fa-file-alt card-icon"></i>
          <h3 class="card-title">Exam Results</h3>
          <p class="card-description">Check your exam performance</p>
          <a href="/users/results?token=<%= token %>" class="flowing-button">View Details</a>
        </div>
      </div>

      <section class="section-card fade-in-flow">
        <h2 class="section-title">
          <i class="fas fa-calendar-check"></i> Overall Attendance
        </h2>
        <div class="attendance-progress">
          <p class="font-semibold text-lg">
            Attendance: 
            <% const total = user && user.attendance ? user.attendance.length : 0; %>
            <% const present = user && user.attendance ? user.attendance.filter(r => r.status === 'Present').length : 0; %>
            <% const percentage = total > 0 ? Math.round((present / total) * 100) : 0; %>
            <%= percentage %>%
          </p>
          <div class="progress-bar">
            <div class="progress-fill" style="width: <%= percentage %>%;"></div>
          </div>
        </div>
        <a href="/users/attendance?token=<%= token %>" class="flowing-button mt-4 inline-block">
          View Full Attendance
        </a>
      </section>

      <section class="section-card fade-in-flow">
        <h2 class="section-title">
          <i class="fas fa-file-alt"></i> Recent Documents
        </h2>
        <% if (!documents || documents.length === 0) { %>
        <p class="text-gray-600 text-center">No documents available for this semester</p>
        <% } else { %>
        <% documents.forEach((doc, index) => { %>
        <div class="document-item">
          <div class="flex items-center">
            <i class="fas fa-file text-primary-blue text-xl mr-4"></i>
            <div>
              <p class="font-semibold"><%= doc.fileType %> (Semester <%= doc.semester %>)</p>
              <p class="text-gray-600 text-sm">Manage your document</p>
            </div>
          </div>
          <div class="flex space-x-2">
            <a href="<%= doc.fileUrl %>" target="_blank" class="flowing-button">
              <i class="fas fa-eye mr-2"></i> View
            </a>
            <a href="/users/download/<%= doc.publicId.split('/').pop() %>?token=<%= token %>" class="flowing-button">
              <i class="fas fa-download mr-2"></i> Download
            </a>
          </div>
        </div>
        <% }) %>
        <% } %>
      </section>

      <section class="section-card fade-in-flow">
        <h2 class="section-title">
          <i class="fas fa-tasks"></i> Upcoming Assignments
        </h2>
        <% if (typeof assignments === 'undefined' || !assignments || assignments.length === 0) { %>
        <p class="text-gray-600 text-center">No assignments due</p>
        <% } else { %>
        <% assignments.forEach((assignment, index) => { %>
        <div class="assignment-item">
          <div class="flex items-center">
            <i class="fas fa-book text-primary-blue text-xl mr-4"></i>
            <div>
              <p class="font-semibold"><%= assignment.title %> (<%= assignment.course %>)</p>
              <p class="text-gray-600 text-sm">Due: <%= new Date(assignment.dueDate).toLocaleDateString() %></p>
            </div>
          </div>
          <a href="/users/assignments/<%= assignment.id %>?token=<%= token %>" class="flowing-button">
            View Details
          </a>
        </div>
        <% }) %>
        <% } %>
      </section>

      <section class="section-card fade-in-flow">
        <h2 class="section-title">
          <i class="fas fa-book-open"></i> Library Resources
        </h2>
        <% if (typeof libraryResources === 'undefined' || !libraryResources || libraryResources.length === 0) { %>
        <p class="text-gray-600 text-center">No library resources reserved or borrowed</p>
        <% } else { %>
        <% libraryResources.forEach((resource, index) => { %>
        <div class="library-item">
          <div class="flex items-center">
            <i class="fas fa-book text-primary-blue text-xl mr-4"></i>
            <div>
              <p class="font-semibold"><%= resource.title %></p>
              <p class="text-gray-600 text-sm">
                Status: <%= resource.status %> | Due: <%= resource.dueDate ? new Date(resource.dueDate).toLocaleDateString() : 'N/A' %>
              </p>
            </div>
          </div>
          <a href="/users/library/<%= resource.id %>?token=<%= token %>" class="flowing-button">
            Manage
          </a>
        </div>
        <% }) %>
        <% } %>
      </section>
    </div>

    <script>
      // Auto-dismiss messages
      function dismissMessage() {
        const message =
          document.getElementById("success-message") ||
          document.getElementById("error-message");
        if (message) {
          message.style.transition = "opacity 0.5s ease";
          message.style.opacity = "0";
          setTimeout(() => message.remove(), 500);
        }
      }
      if (
        document.getElementById("success-message") ||
        document.getElementById("error-message")
      ) {
        setTimeout(dismissMessage, 5000);
      }
    </script>
  </body>
</html>