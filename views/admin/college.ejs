<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ERP Portal - College Structure</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      :root {
        --primary-blue: #3b82f6;
        --primary-purple: #8b5cf6;
        --primary-teal: #06b6d4;
        --primary-pink: #ec4899;
        --primary-indigo: #6366f1;
        --accent-orange: #f97316;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #164172 0%, #3d5f75 100%);
        min-height: 100vh;
        overflow-x: hidden;
      }

      .sidebar-toggle {
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 1001;
        background: var(--primary-blue);
        color: white;
        padding: 0.5rem;
        border-radius: 50%;
        cursor: pointer;
        display: none;
      }

      @media (max-width: 768px) {
        .sidebar-toggle {
          display: block;
        }
      }

      .morphing-container {
        margin-left: 250px;
        padding: 2rem;
        position: relative;
        z-index: 10;
      }

      @media (max-width: 768px) {
        .morphing-container {
          margin-left: 0;
        }
      }

      .blob-card {
        background: rgba(22, 21, 21, 0.15);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
      }

      .blob-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 35px 70px rgba(0, 0, 0, 0.15);
      }

      .college-blob {
        border-radius: 50px 30px 50px 30px;
        transform: rotate(-1deg);
        margin: 1.5rem 0.5rem;
      }

      .text-flow {
        color: white;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      }

      .slide-in-left {
        animation: slideInLeft 0.8s ease-out forwards;
        opacity: 0;
        transform: translateX(-50px);
      }

      @keyframes slideInLeft {
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .table-container {
        overflow-x: auto;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        border-radius: 10px;
        padding: 1rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background: transparent;
      }

      th,
      td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
      }

      th {
        background: rgba(255, 255, 255, 0.05);
      }

      .icon-bubble {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--primary-purple)
        );
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
      }

      .error-flow {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
        padding: 1rem 2rem;
        border-radius: 30px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
        animation: slideInLeft 0.5s ease-out;
      }

      .success-flow {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 1rem 2rem;
        border-radius: 30px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
        animation: slideInLeft 0.5s ease-out;
      }

      .flowing-button {
        background: linear-gradient(
          135deg,
          var(--primary-blue),
          var(--primary-purple),
          var(--primary-teal)
        );
        background-size: 200% 200%;
        border: none;
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.4s ease;
        animation: gradientFlow 3s ease infinite;
      }

      @keyframes gradientFlow {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .flowing-button:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 15px 40px rgba(59, 130, 246, 0.4);
      }

      .student-link {
        cursor: pointer;
        color: var(--primary-blue);
        transition: color 0.3s ease;
      }

      .student-link:hover {
        color: var(--primary-purple);
      }

      .loading-spinner {
        display: inline-block;
        width: 1.5rem;
        height: 1.5rem;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: var(--primary-blue);
        animation: spin 1s ease-in-out infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <button class="sidebar-toggle" aria-label="Toggle Sidebar">
      <i class="fas fa-bars"></i>
    </button>
    <%- include('../partials/admin-sidebar', { token, currentPage: 'college' })
    %>

    <div class="morphing-container">
      <header class="flowing-grid">
        <div class="px-8 py-6">
          <div class="flex items-center">
            <div class="icon-bubble mr-6">
              <i class="fas fa-university"></i>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-flow">College Structure</h1>
              <p class="text-flow opacity-90 text-lg">
                Overview of courses, branches, and assignments
              </p>
            </div>
          </div>
        </div>
      </header>

      <main class="container">
        <% if (success) { %>
        <div class="success-flow slide-in-left" id="success-message">
          <div class="flex items-center">
            <i class="fas fa-check-circle text-2xl mr-4"></i>
            <span class="font-semibold text-lg"><%= success %></span>
          </div>
          <button
            class="text-white hover:text-gray-200"
            onclick="dismissMessage('success-message')"
            aria-label="Close success message"
          >
            <i class="fas fa-times"></i>
          </button>
        </div>
        <% } %> <% if (error) { %>
        <div class="error-flow slide-in-left" id="error-message">
          <div class="flex items-center">
            <i class="fas fa-exclamation-circle text-2xl mr-4"></i>
            <span class="font-semibold text-lg"><%= error %></span>
          </div>
          <button
            class="text-white hover:text-gray-200"
            onclick="dismissMessage('error-message')"
            aria-label="Close error message"
          >
            <i class="fas fa-times"></i>
          </button>
        </div>
        <% } %>

        <section class="overview-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">College Summary</h3>
              <div class="grid grid-cols-2 gap-4 text-flow">
                <div>
                  <p>
                    <strong>Total Courses:</strong> <%= courses ? courses.length
                    : 0 %>
                  </p>
                  <p>
                    <strong>Total Branches:</strong> <%= branches ?
                    branches.length : 0 %>
                  </p>
                  <p>
                    <strong>Total Students:</strong> <%= students ?
                    students.length : 0 %>
                  </p>
                </div>
                <div>
                  <p>
                    <strong>Total Teachers:</strong> <%= teachers ?
                    teachers.length : 0 %>
                  </p>
                  <p>
                    <strong>Total Assignments:</strong> <%= assignments ?
                    assignments.length : 0 %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="courses-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">Courses</h3>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Course</th>
                      <th>Students Enrolled</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!courses || courses.length === 0) { %>
                    <tr>
                      <td colspan="2" class="text-center">
                        No courses available
                      </td>
                    </tr>
                    <% } else { %> <% courses.forEach(course => { %>
                    <tr>
                      <td><%= course.name || 'N/A' %></td>
                      <td><%= course.studentCount || 0 %></td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <section class="branches-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">Branches</h3>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Course</th>
                      <th>Branch</th>
                      <th>Students Enrolled</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!branches || branches.length === 0) { %>
                    <tr>
                      <td colspan="3" class="text-center">
                        No branches available
                      </td>
                    </tr>
                    <% } else { %> <% branches.forEach(branch => { %>
                    <tr>
                      <td><%= branch.course || 'N/A' %></td>
                      <td><%= branch.name || 'N/A' %></td>
                      <td><%= branch.studentCount || 0 %></td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <section class="teachers-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">Teachers</h3>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Assigned Students</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!teachers || teachers.length === 0) { %>
                    <tr>
                      <td colspan="3" class="text-center">
                        No teachers available
                      </td>
                    </tr>
                    <% } else { %> <% teachers.forEach(teacher => { %>
                    <tr>
                      <td><%= teacher.name || 'N/A' %></td>
                      <td><%= teacher.email || 'N/A' %></td>
                      <td>
                        <% const teacherAssignments = assignments.filter(a =>
                        a.teacherId && a.teacherId._id.toString() ===
                        teacher._id.toString()); %> <%=
                        teacherAssignments.length %>
                      </td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <section class="assignments-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">
                Teacher-Student Assignments
              </h3>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Teacher</th>
                      <th>Student</th>
                      <th>Course</th>
                      <th>Branch</th>
                      <th>Semester</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!assignments || assignments.length === 0) { %>
                    <tr>
                      <td colspan="5" class="text-center">
                        No assignments available
                      </td>
                    </tr>
                    <% } else { %> <% assignments.forEach(assignment => { %>
                    <tr>
                      <td>
                        <%= assignment.teacherId && assignment.teacherId.name ?
                        assignment.teacherId.name : 'N/A' %>
                      </td>
                      <td>
                        <%= assignment.studentId && assignment.studentId.name ?
                        assignment.studentId.name : 'N/A' %>
                      </td>
                      <td><%= assignment.course || 'N/A' %></td>
                      <td><%= assignment.branch || 'N/A' %></td>
                      <td><%= assignment.semester || 'N/A' %></td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <section class="students-section">
          <div class="blob-card college-blob slide-in-left">
            <div class="p-8">
              <h3 class="text-2xl font-bold text-flow mb-4">Students</h3>
              <div class="table-container">
                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Roll Number</th>
                      <th>Course</th>
                      <th>Branch</th>
                      <th>Semester</th>
                    </tr>
                  </thead>
                  <tbody id="students-list">
                    <% if (!students || students.length === 0) { %>
                    <tr>
                      <td colspan="5" class="text-center">
                        No students available
                      </td>
                    </tr>
                    <% } else { %> <% students.forEach(student => { %>
                    <tr>
                      <td>
                        <span
                          class="student-link"
                          data-user-id="<%= student._id %>"
                          ><%= student.name || 'N/A' %></span
                        >
                      </td>
                      <td>
                        <%= student.details && student.details.rollNo ?
                        student.details.rollNo : 'N/A' %>
                      </td>
                      <td><%= student.course || 'N/A' %></td>
                      <td><%= student.branch || 'N/A' %></td>
                      <td><%= student.semester || 'N/A' %></td>
                    </tr>
                    <% }) %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

        <div
          id="user-details"
          class="hidden blob-card college-blob slide-in-left"
        >
          <div class="p-8">
            <h3 class="text-2xl font-bold text-flow mb-4">Student Details</h3>
            <div class="table-container" id="user-details-container">
              <table>
                <tbody id="user-details-content">
                  <tr>
                    <td colspan="2" class="text-center">
                      <span class="loading-spinner"></span> Loading...
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <button class="flowing-button mt-4" onclick="closeUserDetails()">
              Close
            </button>
          </div>
        </div>
      </main>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Auto-dismiss messages
        function dismissMessage(id) {
          const message = document.getElementById(id);
          if (message) {
            message.style.transition = "opacity 0.5s ease";
            message.style.opacity = "0";
            setTimeout(() => message.remove(), 500);
          }
        }

        if (document.getElementById("error-message")) {
          setTimeout(() => dismissMessage("error-message"), 5000);
        }
        if (document.getElementById("success-message")) {
          setTimeout(() => dismissMessage("success-message"), 5000);
        }

        // Handle student details popup
        const studentLinks = document.querySelectorAll(".student-link");
        const userDetails = document.getElementById("user-details");
        const userDetailsContent = document.getElementById(
          "user-details-content"
        );

        studentLinks.forEach((link) => {
          link.addEventListener("click", async () => {
            const userId = link.dataset.userId;
            userDetailsContent.innerHTML = `
            <tr><td colspan="2" class="text-center"><span class="loading-spinner"></span> Loading...</td></tr>
          `;
            userDetails.classList.remove("hidden");

            try {
              const response = await fetch(
                `/api/users/${userId}?token=${encodeURIComponent(
                  "<%= token %>"
                )}`
              );
              if (!response.ok) {
                throw new Error(`HTTP error: ${response.statusText}`);
              }
              const user = await response.json();
              userDetailsContent.innerHTML = `
              <tr><td>Name</td><td>${user.name || "N/A"}</td></tr>
              <tr><td>Roll Number</td><td>${
                user.details && user.details.rollNo
                  ? user.details.rollNo
                  : "N/A"
              }</td></tr>
              <tr><td>Course</td><td>${user.course || "N/A"}</td></tr>
              <tr><td>Branch</td><td>${user.branch || "N/A"}</td></tr>
              <tr><td>Semester</td><td>${user.semester || "N/A"}</td></tr>
              <tr><td>Phone</td><td>${
                user.details && user.details.phone ? user.details.phone : "N/A"
              }</td></tr>
              <tr><td>Address</td><td>${
                user.details && user.details.address
                  ? user.details.address
                  : "N/A"
              }</td></tr>
              <tr><td>Date of Birth</td><td>${
                user.details && user.details.dob ? user.details.dob : "N/A"
              }</td></tr>
              <tr><td>Father's Name</td><td>${
                user.details && user.details.fatherName
                  ? user.details.fatherName
                  : "N/A"
              }</td></tr>
              <tr><td>Mother's Name</td><td>${
                user.details && user.details.motherName
                  ? user.details.motherName
                  : "N/A"
              }</td></tr>
            `;
            } catch (err) {
              userDetailsContent.innerHTML = `
              <tr><td colspan="2" class="text-center text-red-400">Error loading user details: ${err.message}</td></tr>
            `;
            }
          });
        });

        function closeUserDetails() {
          userDetails.classList.add("hidden");
          userDetailsContent.innerHTML = `
          <tr><td colspan="2" class="text-center"><span class="loading-spinner"></span> Loading...</td></tr>
        `;
        }
      });
    </script>
  </body>
</html>
